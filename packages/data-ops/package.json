{
  "name": "@repo/data-ops",
  "version": "1.0.0",
  "description": "Shared data package for data helper functions.",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir ./dist && tsc-alias",
    "pull": "drizzle-kit pull --config drizzle.config.ts",
    "migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "generate": "drizzle-kit generate --config drizzle.config.ts",
    "studio": "drizzle-kit studio --config drizzle.config.ts",
    "better-auth-generate": "npx @better-auth/cli generate --config auth-gen/auth.ts",
    "format": "pnpm exec prettier . --write",
    "format:check": "pnpm exec prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "exports": {
    "./database": {
      "types": "./dist/db/database.d.ts",
      "default": "./dist/db/database.js"
    },
    "./queries/*": {
      "types": "./dist/queries/*.d.ts",
      "default": "./dist/queries/*.js"
    },
    "./zod-schema/*": {
      "types": "./dist/zod/*.d.ts",
      "default": "./dist/zod/*.js"
    },
    "./durable-objects-helpers": {
      "types": "./dist/durable-objects-helpers/*.d.ts",
      "default": "./dist/durable-objects-helpers/*.js"
    },
    "./auth": {
      "types": "./dist/better-auth/auth.d.ts",
      "default": "./dist/better-auth/auth.js"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "@better-auth/stripe": "^1.4.6",
    "better-auth": "^1.4.6",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.1",
    "kysely": "^0.28.8",
    "kysely-d1": "^0.4.0",
    "nanoid": "^5.1.6",
    "stripe": "^20.0.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251211.0",
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsc-alias": "^1.8.16",
    "typescript-eslint": "^8.49.0",
    "wrangler": "^4.54.0"
  }
}
